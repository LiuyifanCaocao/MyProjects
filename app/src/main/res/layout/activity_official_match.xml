<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jredu.myprojects.activity.OfficialMatchActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colortitle"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/search_back"
                android:id="@+id/offical_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="官方赛事"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="110dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的赛事"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:id="@+id/myoffical_match"
                android:layout_marginLeft="70dp"/>
        </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
           <!-- <ViewFlipper
                android:id="@+id/viewflipper"
                android:layout_width="match_parent"
                android:flipInterval="3000"
                android:layout_height="wrap_content">

            </ViewFlipper>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/match_autophoto">
                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:id="@+id/vp"
                    android:layout_height="150dp">

                </android.support.v4.view.ViewPager>

                    <LinearLayout
                        android:id="@+id/dotcontaint"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                    </LinearLayout>
            </RelativeLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:paddingTop="16dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/match_now"
                    android:text="赛事直播"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/match_now"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/match_photo"
                    android:text="赛事照片"
                    android:button="@null"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/match_photo"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/match_priview"
                    android:text="赛事预告"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableTop="@drawable/macth_priview"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/match_ticket"
                    android:text="赛事票务"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableTop="@drawable/match_ticket"/>
            </RadioGroup>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:id="@+id/match_linerlayout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/match_title"
                        android:layout_margin="6dp"
                        android:textColor="#0000ff"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/match_content"
                        android:textSize="12sp"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/colorhuishallow"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/match_img"
                        android:layout_marginLeft="6dp"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_toRightOf="@+id/match_linerlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:id="@+id/match_relative">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/match_ride_title"
                        android:textSize="20sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:textColor="#fc8200"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/match_ride_title"
                        android:textSize="12sp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/colorhuishallow"
                        android:id="@+id/match_ride_content"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/match_ride_img"
                        android:layout_toRightOf="@+id/match_ride_title"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:id="@+id/match_relative1"
                    android:layout_below="@+id/match_relative"
                    android:layout_alignLeft="@+id/match_relative">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colortitle"
                        android:textSize="20sp"
                        android:layout_marginLeft="6dp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:id="@+id/match_offline_title"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/colorhuishallow"
                        android:layout_below="@+id/match_offline_title"
                        android:id="@+id/match_offline_content"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/match_offline_img"
                        android:layout_toRightOf="@+id/match_offline_title"/>
                </RelativeLayout>
            </RelativeLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/match_listview"
                android:layout_margin="6dp">

            </ListView>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
