<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e2e2e2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:text="选择运动类型"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/run_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:text="×"
            android:textSize="30dp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <RadioGroup>

            <TableRow android:layout_width="match_parent">

                <RadioButton
                    android:id="@+id/run_radioBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/fragment_run_dialog"
                    android:gravity="center"
                    android:text="户外跑步" />

                <RadioButton
                    android:id="@+id/run_radioBtn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/fragment_run_dialog_treadmill"
                    android:gravity="center"
                    android:text="室内跑步" />

                <RadioButton
                    android:id="@+id/run_radioBtn2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/fragment_run_dialog_walk"
                    android:gravity="center"
                    android:text="走路" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_marginTop="15dp">

                <RadioButton
                    android:id="@+id/run_radioBtn3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/fragment_run_dialog_cycling"
                    android:gravity="center"
                    android:text="骑行" />

                <RadioButton
                    android:id="@+id/run_radioBtn4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/fragment_run_dialog_skiing"
                    android:gravity="center"
                    android:text="滑雪" />

                <RadioButton
                    android:id="@+id/run_radioBtn5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/fragment_run_dialog_skate"
                    android:gravity="center"
                    android:text="滑冰" />
            </TableRow>
        </RadioGroup>
    </TableLayout>
</LinearLayout>
