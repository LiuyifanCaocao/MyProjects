<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jredu.myprojects.activity.ContactPersonActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colortitle"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="50dp"
                android:src="@drawable/search_back"
                android:id="@+id/contact_back"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contactperson"
                android:text="联系人"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:layout_marginLeft="100dp"
                android:textColor="@color/colorWhite"
               />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact_add"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp"
                android:src="@drawable/ic_friend_add_normal"
                />
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/friends"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:text="我的好友"/>

</LinearLayout>
